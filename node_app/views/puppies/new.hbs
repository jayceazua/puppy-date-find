<h1>Add Puppy</h1>
<form enctype="multipart/form-data" action="/puppies" method="post">
  <!-- Puppy's Name -->
  <div class="form-group">
    <label>Breed: </label>
    <input type="text" class="form-control" name="name" placeholder="Puppy's Name">
  </div>

  <!-- Breed -->
  <!-- <div class="form-group">
    <label>Breed: </label>
    <input type="text" name="" value="">
  </div> -->

  <!-- Age -->
  <div class="form-group">
    <label>Age: </label>
    <select name="age">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
    </select>
  </div>

  <!-- Gender -->
  <div  class="form-group">
    <label>Gender: </label>
    <input type="radio" name="gender" value="male"> Male
    <input type="radio" name="gender" value="female"> Female
  </div>

  <!-- Puppy Images Upload -->
  <div class="form-group">
    <label>Image: </label>
    <input type="file" class="form-control" name="image">
  </div>

  <!-- Submit the form input -->
  <button type="submit" class="btn btn-default">Post</button>
  <!-- Close button to go back  -->
  <a href="/puppies" class="btn btn-danger">Close</a>

</form>
