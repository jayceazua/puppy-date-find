<style>
body,html{width:100%;height:100%}body{background:linear-gradient(180deg,rgba(0,0,0,.65) 0,rgba(0,0,0,.65)),url('https://images.pexels.com/photos/1108099/pexels-photo-1108099.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940') no-repeat 50% fixed;background-size:cover;font-size:medium}#footer{display:none}.top-lab{font-size:1.5em;line-height:2em;text-align:center;padding:10px 0}#login-box{position:absolute;left:50%;top:50%;transform:translate(-50%,-50%);border-radius:4px;display:flex;flex-direction:column;padding:20px;box-shadow:1px 2px 2px #000}#login-box,.field{background-color:#fff}.field{padding:10px;width:304px;border:1px solid #ccc;font-size:.8em}.g-recaptcha,input{margin:4px 0}input[type=submit]{cursor:pointer}.lgn-btn{padding:15px;font-size:.8em;color:#fff;background-color:#2c3e50;border:0 solid #3e5871}.bot-links{font-size:.8em;margin:5px 0;color:#777}.bot-links>a{text-decoration:none;cursor:pointer;color:inherit}#error{color:#bd2600;font-size:14px;width:100%;text-align:center;margin-top:-10px;margin-bottom:10px}


footer p {
  color: white ;
}

</style>


<div style="height: 100vh" class="pageContainer">
    <form id="login-box" method="POST" action="/login">
        <div class="top-lab">Login</div>

        {{#if error}}
        <div id="error">{{{error}}}</div>
        {{/if}}

        <input class="field" placeholder="Username" name="username" type="text">
        <input class="field" placeholder="Password" name="password" type="password">

        <input class="lgn-btn" value="Login" type="submit">

        <div class="bot-links">
            <a>Forgot Password</a> - <a href="/register">Sign up</a>
        </div>
    </form>
</div>
